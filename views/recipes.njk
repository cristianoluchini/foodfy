{% extends "layout.njk" %}

{% block content %}
  <main>    
    <div class="cards">

      {% for recipe in recipes %}
        <div id="{{loop.index0}}" class="card">
          <img src="{{recipe.image}}" alt="{{recipe.title}}">
          <h3>{{recipe.title}}</h3>
          <p class="author">por {{recipe.author}}</p>
        </div>     
      {% endfor %}      

    </div>
  </main>

  <script src="/scripts.js"></script>
{% endblock content %}